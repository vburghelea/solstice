      { name: "Settings", url: "/dashboard/settings" },
    ];

    // Check all navigation items are visible
    for (const item of [...navItems, ...userItems]) {
      await expect(
        sidebar.getByRole("link", { name: item.name, exact: true }),
      ).toBeVisible();
    }

